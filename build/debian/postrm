#!/bin/bash
# Post-removal script for Ajime Agent

set -e

case "$1" in
    purge)
        # Remove configuration and data
        rm -rf /etc/ajime
        rm -rf /var/log/ajime
        echo "Ajime Agent configuration removed."
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Keep configuration
        ;;
    *)
        echo "Unknown argument: $1"
        exit 1
        ;;
esac

# Reload systemd
systemctl daemon-reload

exit 0
